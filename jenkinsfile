pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("Application_flask:${env.BUILD_ID}")
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    docker.image("Application_flask:${env.BUILD_ID}").run("-p 9000:9000 --name Moncontainer")
                }
            }
        }
    }

    post {
        always {
            script {
                docker.image("Application_flask:${env.BUILD_ID}").stop()
                docker.image("Application_flask:${env.BUILD_ID}").remove()
            }
        }
    }
}